<% provide(:title, 'Create product') %>
<div class="signup-box">
<h1>Create product</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@product, :html => {:multipart => true}) do |f| %>
    
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Product name" %>
      <%= f.text_field :name %>

      <%= f.label :price %>
      <%= f.number_field :price, :step => 0.01 %>

      <%= f.label :description %>
      <%= f.text_field :description %>
      
      <%= f.fields_for :assets do |asset| %>
          <% if asset.object.new_record? %>
               <%= asset.file_field :asset %>
          <% end %>
      <% end %>

      <% f.fields_for :assets do |asset| %>
          <% unless asset.object.new_record? %>
              <div class="thumbnail">
                    <%= link_to( image_tag(asset.object.asset.url(:thumb)), asset.object.asset.url(:original) ) %>
                     <%= asset.check_box :_delete %>
                </div>
          <% end %>        
      <% end %>


      <div class="center">
      <%= f.submit "Create new product", class: "btn btn-large btn-primary create-account" %>
      </div>
    <% end %>
  </div>
</div>
</div>